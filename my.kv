<Button>:
    # font_size: 40
    background_normal: ''
    background_color: 1, 1, 1, 1
    size_hint: 0.44,0.44
    on_press: self.background_color = (0.44, 0.44, 0.44, 0.17)
    on_release: self.background_color = (1, 1, 1, 1)

